@model CourseProject.ViewModels.SellerVM

@{
    ViewData["Title"] = "Create";
}

<h1>Новий працівник</h1>
<h1 style="color:yellow;font-size:16px;">@(ViewData["Exception"] ?? (""))</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TryCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
            <div class="form-group">
                <label asp-for="SellerName" class="control-label">Ім'я</label>
                <input asp-for="SellerName" class="form-control" minlenth="1" maxlenth="40" />
                <span asp-validation-for="SellerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SellerSurname" class="control-label">Прізвище</label>
                <input asp-for="SellerSurname" class="form-control" minlenth="1" maxlenth="40" />
                <span asp-validation-for="SellerSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label">Телефон</label>
                <input asp-for="Phone" class="form-control" minlength="1" maxlength="40" required pattern="\+380\d{9}" title="Введіть номер в форматі +380xxxxxxxxx" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Пошта</label>
                <input asp-for="Email" class="form-control" minlenth="1" maxlenth="40" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Додати" class="btn btn-lg btn-primary" />
                <a type="button" asp-action="GetAllSeller" asp-controller="Seller" class="btn btn-lg btn-dark">Повернутися назад</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
